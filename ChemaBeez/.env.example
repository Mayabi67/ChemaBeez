# Gmail configuration
GMAIL_USER=your_gmail_address@gmail.com
GMAIL_PASS=your_gmail_app_password
# Email address where order notifications will be sent
ORDER_NOTIFICATION_EMAIL=your_email

# Express server
PORT=3000

# M-Pesa Daraja (M-Pesa Express / STK Push) configuration
# Set MPESA_ENV to "sandbox" or "production"
MPESA_ENV=sandbox
MPESA_CONSUMER_KEY=cunsumer_key
MPESA_CONSUMER_SECRET=customer_secret
MPESA_SHORTCODE=174379
MPESA_PASSKEY=your_daraja_lipa_na_mpesa_passkey
# This must be HTTPS and publicly reachable in production (e.g. via ngrok or a real domain)
MPESA_CALLBACK_URL=https://your-public-domain.com/api/mpesa/callback
